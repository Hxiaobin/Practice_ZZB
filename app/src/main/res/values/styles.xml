<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--底部导航栏样式-->
    <style name="tab_layout_text_appearance">
        <item name="android:textSize">@dimen/text_size_micro</item>
        <item name="android:textColor">@color/common_text_gray</item>
    </style>
    <!-- activity微大字体 黑色 -->
    <style name="activity_text_small_black">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:lines">1</item>
        <item name="android:textColor">@color/common_text_black</item>
    </style>
    <!-- activity微大字体 黑色 -->
    <style name="activity_text_normal_black">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:lines">1</item>
        <item name="android:textColor">@color/common_text_black</item>
    </style>
    <!-- activity微大字体 黑色 -->
    <style name="activity_text_medium_black">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:lines">1</item>
        <item name="android:textColor">@color/common_text_black</item>
    </style>
    <!-- activity大字体 黑色 -->
    <style name="activity_text_big_black">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:lines">1</item>
        <item name="android:textColor">@color/common_text_black</item>
    </style>
    <!-- activity正常字体 灰色 -->
    <style name="activity_text_normal_gray">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:textColor">@color/common_text_gray</item>
    </style>
    <!-- activity小字体 灰色 -->
    <style name="activity_text_small_gray">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:lines">1</item>
        <item name="android:textColor">@color/common_text_gray</item>
    </style>
    <!-- 横向分割线 灰色 -->
    <style name="line_horizontal_gray">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/line_height_low</item>
        <item name="android:background">@color/line_horizontal_gray</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
    <!-- activity设置成对话框的无标题主题 -->
    <style name="LoginTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <!-- 红色Button按钮 -->
    <style name="btn_red">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:background">@drawable/shape_button_red</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <!-- 蓝色Button按钮 -->
    <style name="btn_blue">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:background">@drawable/shape_button_blue</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <!-- 财务助手textview标题样式 -->
    <style name="tv_subtitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/tv_subtitle</item>
    </style>
    <!-- 财务助手内容样式 -->
    <style name="tv_content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/common_padding_normal</item>
        <item name="android:paddingTop">@dimen/common_padding_normal</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>
    <!-- 财务助手余额样式 -->
    <style name="tv_account">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/tv_account</item>
    </style>
    <!-- 工具箱二级标题样式 -->
    <style name="tv_tool">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/common_padding_normal</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/tv_subtitle</item>
    </style>
    <!-- 热销理财产品 -->
    <style name="tv_financial">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/tv_subtitle</item>
    </style>
    <!-- 计算器 -->
    <style name="tv_calculator">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/tv_subtitle</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/common_margin_small</item>
    </style>
    <!-- 汇率 文本框 -->
    <style name="tv_rate">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/tv_subtitle</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/shape_rate_textview</item>
        <item name="android:paddingLeft">@dimen/common_padding_normal</item>
        <item name="android:paddingRight">@dimen/common_padding_normal</item>
        <item name="android:paddingTop">@dimen/common_padding_small_to_normal</item>
        <item name="android:paddingBottom">@dimen/common_padding_small_to_normal</item>
        <item name="android:lines">1</item>
    </style>
    <!-- 汇率 头部 -->
    <style name="tv_rate_head">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/shape_rate_head</item>
        <item name="android:padding">@dimen/common_padding_small_to_normal</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
</resources>
