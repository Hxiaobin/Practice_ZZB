<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lltEmptyView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <!--处理空ListView-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/common_margin_normal"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/icon_super_width"
            android:layout_height="@dimen/icon_super_high"
            android:scaleType="centerInside"
            android:src="@mipmap/image_no_date" />

        <TextView
            android:id="@+id/tvPromptMessage"
            style="@style/activity_text_normal_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_margin_normal"
            android:text="@string/common_sorry_is_loading_now" />
    </LinearLayout>

</LinearLayout>
