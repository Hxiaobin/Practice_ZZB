<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <TextView
        android:id="@+id/tvRateTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/text_size_medium"
        android:gravity="center"
        android:text="@string/tv_tool_rate"
        android:textSize="@dimen/text_size_medium"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/text_size_medium"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvRateCurrency"
            style="@style/tv_rate_head"
            android:text="币种"/>

        <TextView
            android:id="@+id/tvRateTime"
            android:text="期限"
            style="@style/tv_rate_head"/>

        <TextView
            android:id="@+id/tvKnotRate"
            android:text="结汇价"
            style="@style/tv_rate_head"/>

        <TextView
            android:id="@+id/tvSellingRate"
            android:text="售汇价"
            style="@style/tv_rate_head"/>
    </LinearLayout>
</LinearLayout>
