<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sf.bocfinancialsoftware.com.sf.bocfinancialsoftware.activity.financialAssistant.AccountDetailActivity">

    <include layout="@layout/layout_top_bar"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/common_margin_normal"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/common_padding_normal"
                android:paddingTop="@dimen/common_padding_normal">

                <TextView
                    style="@style/tv_subtitle"
                    android:text="账户"/>

                <TextView
                    android:id="@+id/tvAccountDetail1"
                    style="@style/tv_subtitle"
                    android:text="2869****7875"/>

                <TextView
                    style="@style/tv_subtitle"
                    android:text="[人民币]"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_vertical_small_width"
                android:layout_margin="@dimen/small_margin"
                android:background="@color/line"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    style="@style/tv_content"
                    android:text="账户实时余额"/>

                <TextView
                    android:id="@+id/tvBalance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/common_padding_normal"
                    android:text="134,231,233.00"
                    android:textSize="@dimen/text_size_normal"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/common_padding_normal"
                    android:text="元"
                    android:textSize="@dimen/text_size_normal"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/common_padding_normal">

                <TextView
                    style="@style/tv_content"
                    android:text="30日内应付账款"/>

                <TextView
                    android:id="@+id/tvPay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/common_padding_normal"
                    android:text="28,000,000.00"
                    android:textColor="@color/tv_account"
                    android:textSize="@dimen/text_size_normal"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/common_padding_normal"
                    android:text="元"
                    android:textSize="@dimen/text_size_normal"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_vertical_small_width"
        android:layout_margin="@dimen/small_margin"
        android:background="@color/line"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/common_margin_normal"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/common_padding_normal"
                android:paddingTop="@dimen/common_padding_normal">

                <TextView
                    style="@style/tv_subtitle"
                    android:text="账户"/>

                <TextView
                    android:id="@+id/tvAccountDetail2"
                    style="@style/tv_subtitle"
                    android:text="2869****7875"/>

                <TextView
                    style="@style/tv_subtitle"
                    android:text="[人民币]"/>
            </LinearLayout>

            <TextView
                style="@style/tv_content"
                android:text="国际贷款-融信达"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_vertical_small_width"
                android:layout_margin="@dimen/small_margin"
                android:background="@color/line"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/ll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        style="@style/tv_content"
                        android:text="合同日期"/>

                    <TextView
                        style="@style/tv_content"
                        android:text="到期日"/>

                    <TextView
                        style="@style/tv_content"
                        android:text="合同金额"/>

                    <TextView
                        style="@style/tv_content"
                        android:text="贷款利率"/>

                    <TextView
                        style="@style/tv_content"
                        android:text="币种"/>

                    <TextView
                        style="@style/tv_content"
                        android:paddingBottom="@dimen/common_padding_normal"
                        android:text="融资余额"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/ll"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        style="@style/tv_content"
                        android:text="2013-11-01"/>

                    <TextView
                        style="@style/tv_content"
                        android:text="2015-11-01"/>

                    <TextView
                        style="@style/tv_content"
                        android:text="11,000,000.00"/>

                    <TextView
                        style="@style/tv_content"
                        android:text="7.171"/>

                    <TextView
                        style="@style/tv_content"
                        android:text="人民币"/>

                    <TextView
                        android:id="@+id/textView"
                        style="@style/tv_account"
                        android:paddingBottom="@dimen/common_padding_normal"
                        android:text="28,000,000.00元"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
