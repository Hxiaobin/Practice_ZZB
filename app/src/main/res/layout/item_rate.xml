<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvRateCurrency1"
            style="@style/tv_rate" />

        <TextView
            android:id="@+id/tvRateTime1"
            style="@style/tv_rate" />

        <TextView
            android:id="@+id/tvKnotRate1"
            style="@style/tv_rate" />

        <TextView
            android:id="@+id/tvSellingRate1"
            style="@style/tv_rate" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvRateCurrency"
            style="@style/tv_rate" />

        <TextView
            android:id="@+id/tvRateTime"
            style="@style/tv_rate" />

        <TextView
            android:id="@+id/tvKnotRate"
            style="@style/tv_rate" />

        <TextView
            android:id="@+id/tvSellingRate"
            style="@style/tv_rate" />
    </LinearLayout>
</LinearLayout>
