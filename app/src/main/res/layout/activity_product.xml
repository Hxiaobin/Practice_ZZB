<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context="com.sf.bocfinancialsoftware.com.sf.bocfinancialsoftware.activity.tool.product.IntelProductListActivity">

    <include layout="@layout/layout_top_bar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/common_margin_medium"
                android:background="@drawable/shape_search"
                android:gravity="center"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/etSearch"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:padding="@dimen/common_padding_normal"
                    android:singleLine="true"
                    android:textCursorDrawable="@null"/>

                <ImageView
                    android:id="@+id/ivSearch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/common_padding_normal"
                    android:src="@mipmap/search"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llSupply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/common_padding_normal"
                    android:text="供应链融资"
                    android:textSize="@dimen/text_size_normal"/>

                <me.gujun.android.taggroup.TagGroup
                    android:id="@+id/tclToolProductSupply"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/common_margin_normal"
                    app:atg_backgroundColor="@color/background"
                    app:atg_borderColor="@color/tv_time"
                    app:atg_horizontalSpacing="@dimen/small_margin"
                    app:atg_verticalSpacing="@dimen/small_margin"
                    app:atg_horizontalPadding="@dimen/medium_padding"
                    app:atg_verticalPadding="@dimen/medium_padding"
                    app:atg_textColor="@color/tv_time"
                    app:atg_textSize="@dimen/text_size_normal">

                </me.gujun.android.taggroup.TagGroup>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llTrade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_padding_normal"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/common_padding_normal"
                    android:text="国际贸易结算"
                    android:textSize="@dimen/text_size_normal"/>

                <me.gujun.android.taggroup.TagGroup
                    android:id="@+id/tclToolProductTrade"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/common_margin_normal"
                    app:atg_backgroundColor="@color/background"
                    app:atg_borderColor="@color/tv_time"
                    app:atg_horizontalSpacing="15dp"
                    app:atg_verticalSpacing="@dimen/small_margin"
                    app:atg_horizontalPadding="20dp"
                    app:atg_verticalPadding="@dimen/medium_padding"
                    app:atg_textColor="@color/tv_time"
                    app:atg_textSize="@dimen/text_size_normal">

                </me.gujun.android.taggroup.TagGroup>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
