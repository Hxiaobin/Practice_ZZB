<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_common_background_gray"
    android:orientation="vertical"
    android:weightSum="1">

    <include layout="@layout/layout_top_bar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/grzx_bg"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivUserImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/grzx_user" />

            <TextView
                android:id="@+id/tvUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/common_padding_small"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_medium"/>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_margin_large"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/llSuggestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_margin_small"
            android:layout_marginRight="@dimen/common_margin_small"
            android:layout_marginTop="@dimen/common_margin_normal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/ivSuggestion"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:paddingBottom="@dimen/common_padding_small"
                android:src="@mipmap/ic_grzx_yjfk" />

            <LinearLayout
                android:id="@+id/lltSuggestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/common_margin_small"
                android:layout_toRightOf="@+id/ivSuggestion"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/common_padding_small">

                <TextView
                    android:id="@+id/tvSuggestion"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/tv_user_suggestion"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_normal" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/jt_shallow_gray_right" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_horizontal_small_height"
                android:layout_alignLeft="@+id/lltSuggestion"
                android:layout_below="@+id/ivSuggestion"
                android:background="@color/line" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/llUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_margin_small"
            android:layout_marginRight="@dimen/common_margin_small"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/common_padding_small"
            android:paddingTop="@dimen/common_padding_small">

            <ImageView
                android:id="@+id/ivUpdate"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:paddingBottom="@dimen/common_padding_small"
                android:src="@mipmap/ic_grzx_jcgx"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>

            <LinearLayout
                android:id="@+id/rlUpdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/common_margin_small"
                android:layout_toRightOf="@+id/ivUpdate"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/common_padding_small">

                <TextView
                    android:id="@+id/tvUpdate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/tv_user_check_update"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_normal" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/jt_shallow_gray_right" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_horizontal_small_height"
                android:layout_alignLeft="@+id/rlUpdate"
                android:layout_below="@+id/ivUpdate"
                android:background="@color/line" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/llAbout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_margin_small"
            android:layout_marginRight="@dimen/common_margin_small"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/ivAbout"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:paddingBottom="@dimen/common_padding_small"
                android:src="@mipmap/ic_grzx_gy" />

            <LinearLayout
                android:id="@+id/rlAbout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/common_margin_small"
                android:layout_toRightOf="@+id/ivAbout"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/common_padding_small">

                    <TextView
                        android:id="@+id/tvAbout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="@string/tv_user_about"
                        android:textSize="@dimen/text_size_normal"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/jt_shallow_gray_right" />

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <Button
            android:id="@+id/btnExit"
            style="@style/btn_red"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/common_margin_super"
            android:text="@string/tv_user_exit"/>
    </RelativeLayout>
</LinearLayout>
