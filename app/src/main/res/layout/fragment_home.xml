<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_common_background_gray"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.sf.bocfinancialsoftware.widget.SwipeRefreshLayoutHome
            android:id="@+id/swipeRefreshLayoutHomeFragmentBocAnalyse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ListView
                android:id="@+id/lvHomeFragmentBocAnalyse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@color/activity_common_background_gray"
                android:dividerHeight="@dimen/line_height_low"
                android:scrollbars="none" />

        </com.sf.bocfinancialsoftware.widget.SwipeRefreshLayoutHome>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom|center_horizontal">

            <include layout="@layout/layout_list_empty_view" />
        </LinearLayout>

    </FrameLayout>

</LinearLayout>
