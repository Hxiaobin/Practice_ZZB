<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/common_margin_normal"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/common_padding_normal"
                android:paddingTop="@dimen/common_padding_normal">

                <TextView
                    android:id="@+id/tvAccount1"
                    style="@style/tv_subtitle"
                    android:text="账户"/>

                <TextView
                    android:id="@+id/tvAccount"
                    style="@style/tv_subtitle"
                    android:text="2869****7875"/>

                <TextView
                    android:id="@+id/tvAccount2"
                    style="@style/tv_subtitle"
                    android:text="[人民币]"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_vertical_small_width"
                android:layout_margin="@dimen/small_margin"
                android:background="@color/line"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvBalance1"
                    style="@style/tv_content"
                    android:text="账户实时余额"/>

                <TextView
                    android:id="@+id/tvBalance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/common_padding_normal"
                    android:text="134,231,233.00"
                    android:textSize="@dimen/text_size_normal"/>

                <TextView
                    android:id="@+id/tvBalance2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/common_padding_normal"
                    android:text="元"
                    android:textSize="@dimen/text_size_normal"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/common_padding_normal">

                <TextView
                    android:id="@+id/tvPay1"
                    style="@style/tv_content"
                    android:text="30日内应付账款"/>

                <TextView
                    android:id="@+id/tvPay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/common_padding_normal"
                    android:text="28,000,000.00"
                    android:textColor="@color/tv_account"
                    android:textSize="@dimen/text_size_normal"/>

                <TextView
                    android:id="@+id/tvPay2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/common_padding_normal"
                    android:text="元"
                    android:textSize="@dimen/text_size_normal"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
